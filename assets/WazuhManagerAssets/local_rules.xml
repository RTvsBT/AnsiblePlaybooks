<!-- The base set of rules used for the HIDS -->

<group name="defensie_web">
  <rule id="100001" level="5">
    <decoded_as>defensie_web</decoded_as>
    <field name="msg.description">SQL Injection attempt</field>
    <description>SQL Injection Attempt</description>
  </rule>
  <rule id="100002" level="5">
    <decoded_as>defensie_web</decoded_as>
    <field name="msg.description">Login brute force attempt by</field>
    <description>Brute Force Attempt</description>
  </rule>
 </group>
 
 <group name="defensie_web_suricata">
   <rule id="100003" level="5">
     <decoded_as>defensie_web_suricata</decoded_as>
     <description>Suricata alert</description>
   </rule>
 </group>
